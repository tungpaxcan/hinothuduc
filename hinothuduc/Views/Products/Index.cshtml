@model hinothuduc.Models.Product
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input hidden value="@Model.Id" id="id" />
<div class="page-title shop-page-title product-page-title">
