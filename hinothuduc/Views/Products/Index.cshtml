            <div class="product-container">
                <div class="product-main">
                    <div class="row content-row mb-0">
                        <div class="product-gallery col large-8">
                            <div class="conwidth">
                                <div class="clearfix owidth box">
                                    <div class="left">
                                        <div class="pc-slide">
                                            <div class="view">
                                                <div class="box on">
