                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="related related-products-wrapper product-section">
                            <h3 class="product-section-title container-width product-section-title-related pt-half pb-half uppercase">
                                Sản phẩm tương tự
                            </h3>
                            <div id="SanPhamTuongTu" class="row large-columns-4 medium-columns-3 small-columns-2 row-small slider row-slider slider-nav-reveal slider-nav-push" data-flickity-options='{"imagesLoaded": true, "groupCells": "100%", "dragThreshold" : 5, "cellAlign": "left","wrapAround": true,"prevNextButtons": true,"percentPosition": true,"pageDots": false, "rightToLeft": false, "autoPlay" : false}'>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>


    </div><!-- shop container -->

</main>

@section scripts{
    <script>
        $(document).ready(function () {
            $('table').css('width','100%')
        })
        ImgAdd()
        productnext()
        SanPhamTuongTu()
        function productnext() {
            var id = $('#id').val().trim()
            $.ajax({
                url: '/products/ProductNext',
                type: 'get',
                data: {
                    id
                },
                success: function (data) {
                    $('#productnext').empty();
                    if (data.code == 200) {
                        $.each(data.a, function (k, v) {
                            let a = '<a href="/san-pham/'+v.meta+'/'+v.id+'" rel="next" class="button icon is-outline circle">'
                               a+='<img src = "/Images/icons8-right-20.png" />'
                            a +='</a>'
                            a +='<div class="nav-dropdown">'
                            a += ' <a title="' + v.name + '" href="/san-pham/' + v.meta + '/' + v.id +'">'
                            a +='<img width="100" height="100" src="'+v.image+'" />'
                            a +='</a>'
                            a +='</div>'
                            $('#productnext').append(a)
                        })
                    }
                }
            })
        }
        function ImgAdd() {
            var id = $('#id').val().trim()
            $.ajax({
                url: '/products/ImgAdd',
                type: 'get',
                data: {
                    id
                },
                success: function (data) {
                    $('#imgadd').empty();
                    if (data.code == 200) {
                        $.each(data.a, function (k, v) {
                            let a = '<div class="swiper-slide" style="width:25%">'
                                 a+='<div name="swapimg" class="smallimg"> <img loading="lazy" id="img_01" src="'+v.image+'" data-zoom-image="'+v.image+'" alt="" style="visibility: visible;width:100%;"></div>'
                            a +='</div>'
                            $('#imgadd').append(a)
                        })
                    }
                }
            })
        }
        function SanPhamTuongTu() {
            var idcate =@Model.IdCateProcduct
            var id =@Model.Id
            $.ajax({
                url: '/products/SanPhamTuongTu',
                type: 'get',
                data: {
                    idcate,id
                },
                success: function (data) {
                    $('#SanPhamTuongTu').empty();
                    if (data.code == 200) {
                        $.each(data.a, function (k, v) {
                            let a = '<div class="product-small col has-hover product type-product post-4470 status-publish instock product_cat-xe-tai-hino has-post-thumbnail shipping-taxable product-type-simple">'
                               a+='<div class="col-inner">'
                                a+='<div class="badge-container absolute left top z-1">'
                            a +='</div>'
                            a +='<div class="product-small box ">'
                            a +='<div class="box-image">'
                            a +='<div class="image-fade_in_back">'
                            a +='<a href="/san-pham/'+v.meta+'/'+v.id+'">'
                            a +='<img width="600" height="400" src="'+v.image+'" />'
                            a +='</a>'
                            a +='</div>'
                            a +='<div class="image-tools is-small top right show-on-hover">'
                            a +='</div>'
                            a +='<div class="image-tools is-small hide-for-small bottom left show-on-hover">'
                            a +='</div>'
                            a +='<div class="image-tools grid-tools text-center hide-for-small bottom hover-slide-in show-on-hover">'
                            a +='</div>'
                            a +='</div>'
                            a += '<div class="box-text box-text-products text-center grid-style-2">'
                            a += '<div class="title-wrapper"><p class="name product-title woocommerce-loop-product__title"><a href="/san-pham/' + v.meta + '/' + v.id + '" class="woocommerce-LoopProduct-link woocommerce-loop-product__link">' + v.name + '</a></p></div><div class="price-wrapper">'
                            a +='</div>'
                            a +='</div>'
                            a +='</div>'
                            a +='</div>'
                            a +='</div>'
                            $('#SanPhamTuongTu').append(a)
                        })
                    }
                }
            })
        }
        var swiper = new Swiper(".mySwiper", {
            pagination: {
                el: ".swiper-pagination",
            },
            width: 90,
        });
        $(document).on('click', "div[name='swapimg']", function () {
            let image = $(this).children('img').attr('src')
            $('.my-foto').attr('src', image)
            $('#img_01').ezPlus({
                gallery: 'gal1', cursor: 'pointer', galleryActiveClass: 'active',
                imageCrossfade: true, loadingIcon: 'http://www.elevateweb.co.uk/spinner.gif'
            });
        })
    </script>
    }